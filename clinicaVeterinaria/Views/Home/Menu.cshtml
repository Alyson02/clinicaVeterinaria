
@{
    ViewBag.Title = "Menu";
}

<style>
    body{
        box-sizing: border-box;
    }

    .links {
        display: flex;
        flex-wrap: wrap;
    }

    .links > div {
        width: 23%;
        padding: 0 50px;
        margin: 1%;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: 20px;
        text-align: center;
        color: black;
        flex-shrink: 1;
    }

    .links > div:nth-child(4n) {
        margin-right: 0;
        padding: 0 0 0 100px;
    }

    .links > div:nth-child(4n+1) {
        margin-left: 0;
        padding: 0 100px 0 0;
    }

    .links > div > img {
        box-sizing: border-box;
        order: -1;
        margin-bottom: 24px;
        width: 100%;
    }

    .links > div > a {
        flex-grow: 1;
    }

</style>

